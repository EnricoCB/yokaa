<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".BlankFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/bgCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagemPerfil"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/foto"
        app:layout_constraintStart_toStartOf="@+id/resumoPerfil"
        app:layout_constraintTop_toTopOf="@+id/bgCard" />

    <TextView
        android:id="@+id/nomePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Vinicius Marques"
        android:textColor="#f2f2f2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imagemPerfil"
        app:layout_constraintStart_toEndOf="@id/imagemPerfil"
        app:layout_constraintTop_toTopOf="@id/imagemPerfil" />

    <TextView
        android:id="@+id/resumoPerfil"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Lörem ipsum tiporat disade bende. Vöfåliga tasm antell. Savil taras kanar.
Vapost heteror i virade, huruvida bröllopsklänning ifall shoppingspion. Domynar röling för miktig tresk prening. "
        android:textColor="#f2f2f2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/bgCard"
        app:layout_constraintStart_toStartOf="@id/bgCard"
        app:layout_constraintTop_toBottomOf="@id/imagemPerfil" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verMaisBtn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/poppins_bold"
        android:text="Ver Mais"
        android:textColor="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="@id/bgCard"
        app:layout_constraintEnd_toEndOf="@id/bgCard"
        app:layout_constraintStart_toStartOf="@id/bgCard"
        app:layout_constraintTop_toBottomOf="@id/resumoPerfil" />

    <TextView
        android:id="@+id/idadePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_medium"
        android:text="17 Anos"
        android:textColor="#f2f2f2"
        app:layout_constraintStart_toStartOf="@id/nomePerfil"
        app:layout_constraintTop_toBottomOf="@id/nomePerfil" />
</androidx.constraintlayout.widget.ConstraintLayout>